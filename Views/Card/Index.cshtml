@model E_Trade.MvsWebUI.Models.Card
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Shopping Cart</h2>
            @if (Model.CardLines.Count > 0)
            {
                <table class="table table-bordered">
                    <thead style="color:white">
                        <tr>
                            <th></th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Sub Total</th>
                        </tr>
                    </thead>
                    <tbody style="color:white">
                        @foreach (var item in Model.CardLines)
                        {
                            <tr style="height:50px">
                                <td style="align-items:center;width:30px"><img src="~/Theme/img/@item.Product.PictureUrl" width="30" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Name</td>
                                <td>@item.Product.Price</td>
                                <td>@((item.Product.Price * item.Quantity).ToString("c")) </td>
                                <td width="50px">
                                    @using (Html.BeginForm("RemoveFromCard", "Card"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id)
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot style="color:white">
                        <tr>
                            <td colspan="5"></td>
                            <td>@Model.Total().ToString("c")</td>
                        </tr>
                    </tfoot>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    Please add a product!
                </div>
            }

        </div>

    </div>
</div>

