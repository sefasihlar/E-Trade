@using E_Trade.MvsWebUI.Entity;
@model IEnumerable<Product>
@{
    ViewBag.Title = "Index";
}

<div class="card-group">
    <!-- Coursel -->
    <div class="row">
        <div class="card col-md-3">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Theme/img/caurosel-1.png" class="d-block" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Theme/img/caurosel-2.png" class="d-block" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Theme/img/caurosel-3.png" class="d-block" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev" style="margin-top:100px">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next" style="margin-top: 100px">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <!-- slider-card -->
        <div class="card col-md-3">
            <img class="card-img-top" src="~/Theme/img/slider-1.png" alt="Card image">
        </div>
        <div class="card col-md-3">
            <img class="card-img-top" src="~/Theme/img/slider-2.png" alt="Card image">
        </div>
        <div class="card col-md-3">
            <img class="card-img-top" src="~/Theme/img/caurosel-2.png" alt="Card image">
        </div>
    </div>
</div>

<div class="row" id="index-card">

    @foreach (var item in Model)
    {
            <div class="content col-md-3">
                <img class="card-img" src="@item.PictureUrl" alt="">
                <div class="card-body">
                    <h5 class="acrd-title">
                    @item.Name
                    </h5>
                    <p class="card-text">@item.Description</p>
                    <ul>
                        <li><i class="fa fa-star checked"></i></li>
                        <li><i class="fa fa-star checked"></i></li>
                        <li><i class="fa fa-star checked"></i></li>
                        <li><i class="fa fa-star "></i></li>
                        <li><i class="fa fa-star"></i></li>
                    </ul>
                    <button><small class="card-muted"><a href="/Home/Details/@item.Id">Button</a></small></button>
                </div>
            </div>
     }
</div>

